<div class="container text-center">
  <h1>Welcome</h1>
  <% if flash[:notice] %>
    <%= flash[:notice] %>
  <% end %>
  <div>
    <% if current_user %>
      Signed in as <%= current_user.name %>
      <%= link_to 'sign out', signout_path %>
    <% else %>
      <%= link_to 'sign in with Google', '/auth/google_oauth2' %>
    <% end %>
  </div>
</div>
