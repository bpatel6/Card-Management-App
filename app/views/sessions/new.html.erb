<div class="container text-center">
  <h1>Welcome!</h1>
  <% if flash[:notice] %>
    <div class="flash-message">
      <%= flash[:notice]%>
    </div>
  <% end %>
  <div>
    <% if current_user %>
      Signed in as <%= current_user.name %>
      <%= link_to 'sign out', signout_path %>
    <% else %>
      <%= link_to 'Sign in with Google', '/auth/google_oauth2', class: "btn"%>
    <% end %>
  </div>
</div>
