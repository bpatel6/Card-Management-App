<h1>Game Coming Soon</h1>

<%= button_to 'Guest User', users_show_path, method: :get%>
<%= form_tag cards_deal_all_path, :method =>:get do %>
  <%text_fild_tag :num_cards, params[:num_cards] %>
  <%submit_tag "Deal Cards To All Players", name: cards_deal_all_path %>
<%end %>

<h2>Deck</h2>
<table>
  <thead>
  <tr>
    <th>Card</th>
  </tr>
  </thead>
  <tbody>
  <% if @cards.present? %>
    <% @cards.each do |card| %>
      <tr>
        <td>
          <%= card[:card_value] + ' of ' + card[:card_suit] %>
        </td>
      </tr>
    <% end %>
  <% else %>
    <tr>
      <td> Deck is empty </td>
    </tr>
  <% end %>
  </tbody>
</table>